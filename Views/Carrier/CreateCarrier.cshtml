@model CarrierModel

@{
    Layout = "_AdminLayout";

    //page title
    ViewBag.Title = T("Plugins.Shipping.Manager.Carriers.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Nop.Plugins.Shipping.Manager.Carriers");
}

<form asp-controller="Carriers" asp-action="CreateCarrier" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Shipping.Manager.Carriers.AddNew")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = ShippingManagerWidgetZones.CarrierDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/SSI.Shipping.Manager/Views/Carrier/_CreateOrUpdateCarrier.cshtml", Model)
</form>